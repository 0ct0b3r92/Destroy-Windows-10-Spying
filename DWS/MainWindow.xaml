<Window x:Class="DWS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DWS"
        xmlns:plugins="clr-namespace:DWS.Plugins" 
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        DataContext="{Binding Items,Source={x:Static plugins:AbtractPlugin.Instances}}"
        >
    <Grid>
        <TabControl Name="MainTabControl">
            <TabItem Header="Hello" Name="WelcomePage">Welcome page. TODO!</TabItem>
            <TabItem Header="Settings" Name="SettingsPage">TODO!</TabItem>
            <TabItem Header="Plugins" Name="PluginsPage">
                <ListView ItemsSource="{Binding Items}" >
                    <GroupBox Header="{Binding UIHeader}">
                        <Frame Source="{Binding UIFrameSource}" ></Frame>
                    </GroupBox>
                </ListView>
            </TabItem>
            <TabItem Header="Credintals" Name="CredintalsPage">Authors : Nummer and Sergius-Dart</TabItem>
        </TabControl>
    </Grid>
</Window>
